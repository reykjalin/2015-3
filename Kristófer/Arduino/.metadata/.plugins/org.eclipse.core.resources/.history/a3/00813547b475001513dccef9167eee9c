#include <Wire.h>
//#include <Arduino.h>

const int BAUD = 57600;
const int DEL_TIME = 2000;
const int PACK_SIZE = 2;
const uint8_t RUMBA = 8;

byte packets[PACK_SIZE];

void setup()
{
	Serial.begin(BAUD);
	Wire.begin();
}

void loop()
{
	for (int i = 0; i < 10; i++) {
		Serial.print("** Begin transmission of: "); Serial.print(i); Serial.println(" **");
		Wire.beginTransmission(RUMBA);

		packets[0] = (i >> 8) & 0xff;
		packets[1] = i & 0xff;

		Wire.write(packets, PACK_SIZE);
		Wire.endTransmission();
		Serial.println("** End of transmission **");
		delay(DEL_TIME);
	}
}
