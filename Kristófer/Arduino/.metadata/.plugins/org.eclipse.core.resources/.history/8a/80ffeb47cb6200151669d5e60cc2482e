#ifndef BUTTON_H_
#define BUTTON_H_

#include <Arduino.h>

class Button {
	private:
		unsigned int debounce;
		int pin;
		int lstBtnState;
		int currBtnState;
		unsigned int lstSmplTm;
	public:
		Button(int p) : debounce(50), pin(p), lstBtnState(0), currBtnState(0), lstSmplTm(0) { }

		// Getter & setter for 'debounce'
		void setDeb(int value);
		unsigned int getDeb();

		// Getter & setter for 'currBtnState', current button state
		void setCurrState(int value);
		int getCurrState();

		// Getter & setter for 'lstBtnState', last button state
		void setLstState(int value);
		int getLstState();

		// Getter & setter for 'lstSmplTm', last sample time
		void setLstSmpl(int value);
		int getLstSmpl();

		// Initialize the button
		void initBut();

		// Check button events
		int chkBtnEvnts();
		// Read button
		int read();
};

#endif /* BUTTON_H_ */
