void sendCmd() {
	Serial.print("** Begin transmission of: "); Serial.print(cmd); Serial.println(" **");
	Wire.beginTransmission(RUMBA);

	packets[0] = x;
	packets[1] = y;
	packets[2] = z;
	packets[3] = u;
	packets[4] = v;
	packets[5] = w;

	Wire.write(packets, PACK_SIZE);
	Wire.endTransmission();
	Serial.println("** End of transmission **");
}
