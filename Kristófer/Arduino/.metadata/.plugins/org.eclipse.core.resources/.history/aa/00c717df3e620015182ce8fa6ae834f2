#include "Display.h"
#include <LiquidCrystal.h>

void Display::initialize() {
	lcd.begin(16, 1);
	lcd.setCursor(16,0);
}

void write(char value) {
	lcd.autoscroll();
	lcd.print(value);
	lcd.noAutoscroll();
}
