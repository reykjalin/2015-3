#ifndef BUTTON_H_
#define BUTTON_H_

class Button {
	private:
		int debounce;
		int pin;
		int lstBtnState;
		int currBtnState;
		int lstSmplTm;
	public:
		Button();
		Button(int p) : debounce(50), pin(p) { }

		// Getter & setter for 'debounce'
		void setDeb(int value);
		int getDeb();

		// Getter & setter for 'currBtnState', current button state
		void setCurrState(int value);
		int getCurrState();

		// Getter & setter for 'lstBtnState', last button state
		void setLstState(int value);
		int getLstState();

		// Getter & setter for 'lstSmplTm', last sample time
		void setLstSmpl(int value);
		int getLstSmpl();

		// Initialize the button
		void initBut();

		// Check button events
		int chkBtnEvnts();

};

#endif /* BUTTON_H_ */
